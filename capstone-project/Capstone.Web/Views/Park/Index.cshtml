@using Capstone.Web.Models;
@model List<Park>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (Park p in Model)
{
    <div class="park-tile row">
        <div class="col-sm-6">
            <a href="@Url.Action("Detail", "Park", new { parkCode = p.ParkCode })"><img class="img-responsive park-img" src="@Url.Content("~/Content/parks/" + p.ParkCode + ".jpg")" /></a>
        </div>
        <div class="col-sm-6">
            <div class="park-title-with-badge">
                <h3 class="park-name"><a href="@Url.Action("Detail", "Park", new { parkCode = p.ParkCode })">@p.ParkName</a></h3>
                <span class="park-location">@p.State</span>
            </div>
            <p class="park-description">@p.ParkDescription</p>
        </div>
    </div>
}