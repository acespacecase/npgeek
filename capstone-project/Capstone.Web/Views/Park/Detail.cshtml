@using Capstone.Web.Models;
@model Park

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-8 col-lg-offset-2">
    <div class="row">
        <div class="col-lg-6">
            <img class="img-responsive" src="@Url.Content("~/Content/parks/" + Model.ParkCode + ".jpg")" />
        </div>
        <div class="col-lg-6">
            <h3 class="park-name">@Model.ParkName</h3>
            <p class="park-location">@Model.State</p>
            <p class="park-description">@Model.ParkDescription</p>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4">
            <table class="table">
                <tr>
                    <td>
                        Est.
                    </td>
                    <td>
                        @Model.YearFounded
                    </td>
                </tr>
                <tr>
                    <td>
                        Size: 
                    </td>
                    <td>
                        @Model.Acreage.ToString("N0") acres
                    </td>
                </tr>
                <tr>
                    <td>
                        Elevation:
                    </td>
                    <td>
                        @Model.ElevationInFeet.ToString("N0") feet
                    </td>
                </tr>
                <tr>
                    <td>
                        Trail Length:
                    </td>
                    <td>
                        @Model.MilesOfTrail.ToString("N0") miles
                    </td>
                </tr>
                <tr>
                    <td>
                        Entry Fee:
                    </td>
                    <td>
                        @Model.EntryFee.ToString("C2")
                    </td>
                </tr>
                <tr>
                    <td>
                        Number of Campsites:
                    </td>
                    <td>
                        @Model.NumberOfCampsites.ToString("N0") 
                    </td>
                </tr>
                <tr>
                    <td>
                        Annual Visitors:
                    </td>
                    <td>
                        @Model.AnnualVisitorCount.ToString("N0") guests
                    </td>
                </tr>
                <tr>
                    <td>
                        Animal Species:
                    </td>
                    <td>
                        @Model.NumberOfAnimalSpecies
                    </td>
                </tr>
                <tr>
                    <td>
                        Climate:
                    </td>
                    <td>
                        @Model.Climate
                    </td>
                </tr>
            </table>
        </div>
        <div class="col-lg-8">
            <p class="quote">@Model.InspirationalQuote</p>
            <p class="source">@Model.InspirationalQuoteSource</p>
        </div>
    </div>
</div>